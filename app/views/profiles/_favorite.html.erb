<div id="favorite_<%= favorite.product.slug %>" style="margin-bottom:15px;">
	<div class="card">
		<div class="card-block">
			<a href="/products/<%= favorite.product.pretty_slug %>" style="color:#333;text-decoration:none;">
			<%= image_tag "#{favorite.product.img_front_url}", style: "width:100%;height:100%;", class: "pretty" %>
			<div style="padding:5px;">
				<strong>
				<%= favorite.product.name %>
				</strong>
			</div>
			<div style="padding:5px;padding-top:0px;">
				<div style="float:right;margin-right:-10px;">
					<% if @user == @current_user %>
		                <a onClick="removeFromFavorites('<%= favorite.product.slug %>');" style="display:inline-block;float:right;cursor:pointer;color:#CBCBCB;margin-right:10px;margin-tip:-5px;"><i class="fas fa-minus-circle"></i></a>
	                <% end %>
				</div>
				<small style="text-muted"><%= favorite.product.place_name %></small>
			</div>
			</a>
		</div>
	</div>
</div>